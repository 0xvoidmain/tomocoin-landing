.slick-initialized .slick-slide
  display: block
  outline: none

.videos-slider
  .container
    position: relative
  .thumb
    width: 100%
    height: 300px
    object-fit: cover
    @media(max-width: 767px)
      height: 200px
  .play-icon
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: 80px
    height: 80px
    cursor: pointer
    opacity: 0.9
    &:hover
      opacity: 1

  .slick-slide
    opacity: 0.7
    transform: scale(0.8)
    transition: 0.5s all
    transform-origin: right
  .slick-center
    opacity: 1
    transform: scale(1)

    &+.slick-slide
      transform-origin: left