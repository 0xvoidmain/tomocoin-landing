.navbar
  border none
  border-radius 0
  margin auto
  min-height 60px
  padding 40px 20px
  transition 0.4s all
  width 100%
  top 0
  position fixed
  z-index: 9999

.navbar .navbar-toggle
  margin-right 0

.navbar.mini
  padding 5px 20px 0 20px
  background #5D71B9

  .logo
    width 40px
    height 40px
    margin-top 5px

.navbar.mini-xs
  @media(max-width: 767px)
    padding 5px 20px 0 20px
    background #5D71B9
    .logo
      width 40px
      height 40px
      margin-top 5px

.navbar-nav
  >li
    > a
      position relative
      display block
      color #ffffff
      font-size 11px
      letter-spacing 1px
      text-transform uppercase
      margin-left 25px
      padding 15px 10px

.navbar-nav
  a
    &:hover
      color #ffffff
      opacity 0.7
      background-color transparent !important
    &:focus
      background-color transparent !important

.navbar-collapse
    border-color #101010

.navbar-toggle
    border-color transparent
    .icon-bar
      background #ffffff

.language
  background transparent
  border none
  color #ffffff
  font-size 10px
  letter-spacing 1px
  text-transform uppercase
  margin-left 50px
  padding 15px 10px