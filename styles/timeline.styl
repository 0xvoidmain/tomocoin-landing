.timeline {
  list-style: none;
  padding: 20px 0 20px;
  position: relative;
  font-family: 'Lato'
}
.timeline:before {
  top: 0;
  bottom: 320px;
  position: absolute;
  content: " ";
  width: 3px;
  background-color: #DEDEDE;
  left: 50%;
  margin-left: -1.5px;
}
.timeline > li {
  margin-bottom: 40px;
  position: relative;
}
.timeline > li:before,
.timeline > li:after {
  content: " ";
  display: table;
}
.timeline > li:after {
  clear: both;
}
.timeline > li:before,
.timeline > li:after {
  content: " ";
  display: table;
}
.timeline > li:after {
  clear: both;
}

.timeline > li.timeline-inverted + li:not(.timeline-inverted),
.timeline > li:not(.timeline-inverted) + li.timeline-inverted {
  margin-top: 0;
}

.timeline > li:not(.timeline-inverted) {
  padding-right:90px;
}

.timeline > li.timeline-inverted {
  padding-left:90px;
}

.timeline > li.timeline-end {
  text-align: center;
  padding: 50px 0 0 0;
}


.timeline > li > .timeline-badge {
  color: #fff;
  width: 21px;
  height: 21px;
  line-height: 20px;
  font-size: 1.4em;
  text-align: center;
  position: absolute;
  top: 16px;
  left: 50%;
  margin-left: -11px;
  background-color: #fff;
  border: 5px solid #2FD7AE;
  z-index: 100;
  border-top-right-radius: 50%;
  border-top-left-radius: 50%;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
}
.timeline > li > .timeline-panel > .timeline-heading {
  margin-bottom: 20px;
}
.timeline > li > .timeline-panel > .timeline-heading > h3 {
  font-weight: 800;
  line-height: 1.5;
}
.timeline > li > .timeline-panel {
  width: 50%;
  float: left;
  border-radius: 2px;
  position: relative;
  text-align: right;
}

.timeline > li.timeline-inverted > .timeline-panel {
  float: right;
  text-align: left;
}

.timeline > li.timeline-end > .timeline-panel {
  width: 100%;
  float: none;
  text-align: center;
}


.timeline > li.timeline-end > .timeline-panel:before {
  display: none;
}

.timeline > li > .timeline-panel:before {
  position: absolute;
  top: 26px;
  right: -30px;
  height: 3px;
  display: inline-block;
  width: 20px;
  content: " ";
  background: #DEDEDE;
}

.timeline > li.timeline-inverted > .timeline-panel:before {
  border-left-width: 0;
  border-right-width: 15px;
  left: -30px;
  right: auto;
}


.timeline-title {
  margin: 0;
  color: #ffffff;
}
.timeline-body > p,
.timeline-body > ul {
  margin-bottom: 0;
  color: #ffffff;
  font-size: 18px;
  margin-bottom: 15px;
}
.timeline-body > p + p {
  margin-top: 15px;
}

@media(max-width: 767px) {
  .timeline:before {
    left: 20px;
    bottom: 280px;
  }

  .timeline > li {
    padding-right: 0 !important;
    padding-left: 45px !important;
  }

  .timeline > li.timeline-end {
    padding: 0 0 0 0;
  }

  .timeline > li > .timeline-badge {
    left: 21px;
  }

  .timeline > li > .timeline-panel {
    width: 100% !important;
    float: left;
    text-align: left !important;
  }

  .timeline > li.timeline-end > .timeline-panel {
    width: 100%;
    float: none;
  }

  .timeline > li > .timeline-panel > .timeline-heading > h3 {
    font-size: 20px;
  }

  .timeline > li.timeline-end > .timeline-panel:before {
    display: none;
  }

  .timeline > li > .timeline-panel:before {
    display: none;
  }
}
